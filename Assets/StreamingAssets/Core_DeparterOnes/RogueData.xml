					<RogueNodeSelectionData>
						<describe>展开捕猎（提高疲劳度，战斗胜利后提高补给值）</describe>
						<uiBehavior>ToBattle</uiBehavior>
						<behaviors>
							<RogueNodeSelectionBehavior_ResControl>
								<resName>RogueRes_Fatigue</resName>
								<amount>1</amount>
							</RogueNodeSelectionBehavior_ResControl>
							<RogueNodeSelectionBehavior_ToBattle>
								<battleScenceId>0</battleScenceId>
							</RogueNodeSelectionBehavior_ToBattle>
						</behaviors>
					</RogueNodeSelectionData>
					<RogueNodeSelectionData>
						<describe>安营扎寨，让队伍里的人好好休息（降低疲劳度。）</describe>
						<uiBehavior>ToNextNode</uiBehavior>
						<behaviors>
							<RogueNodeSelectionBehavior_ResControl>
								<resName>RogueRes_Fatigue</resName>
								<amount>-2</amount>
							</RogueNodeSelectionBehavior_ResControl>
						</behaviors>
					</RogueNodeSelectionData>
					<RogueNodeSelectionData>
						<describe>不进入森林（提高疲劳）</describe>
						<uiBehavior>EndEvent</uiBehavior>
						<behaviors>
							<RogueNodeSelectionBehavior_ResControl>
								<resName>RogueRes_Fatigue</resName>
								<amount>1</amount>
							</RogueNodeSelectionBehavior_ResControl>
